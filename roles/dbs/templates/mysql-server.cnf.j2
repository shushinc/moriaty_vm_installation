[mysqld]
server-id = {{ server_id }}
binlog_format = ROW
gtid_mode = ON
enforce_gtid_consistency = ON
log_slave_updates = ON
binlog_expire_logs_seconds = 2592000
binlog_row_image = FULL

{% if inventory_hostname in groups['db_primary'] %}
log_bin = mysql-bin
innodb_flush_log_at_trx_commit = 1
sync_binlog = 1
{% else %}
read_only = ON
super_read_only = ON
relay_log = relay-bin
log_bin = mysql-bin   # keep if you want chained replicas/promotions
{% endif %}
